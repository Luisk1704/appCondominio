@model Infraestructure.Models.Reservacion

<div class="tabla">
    @using (Html.BeginForm("Save", "Reservacion", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Reservacion</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Fecha, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-12 row">
                <div class="col-md-9 row">
                    <div class="col-md-6">
                        @Html.DropDownList("dia",
                        (SelectList)ViewBag.fechas,
                        "Seleccione Dia",
                        htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="col-md-6">
                        @DateTime.Now.Month @DateTime.Now.Year
                    </div>
                    @if (ViewBag.errorDia != null)
                    {
                        <p class="text-danger">@((string)ViewBag.errorDia)</p>
                    }
                </div>
            </div>
        </div>
        <br />
        <br />
        <br />
        <div class="form-group">
            Horario
            <div class="col-md-12 row">
                <div class="col-md-9 row">
                    <div class="col-md-6">
                        @Html.DropDownList("hora",
                        (SelectList)ViewBag.horas,
                        "Seleccione hora",
                        htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="col-md-6">
                        :00:00
                    </div>
                    @if (ViewBag.errorHora != null)
                    {
                        <p class="text-danger">@((string)ViewBag.errorHora)</p>
                    }
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="regresar" />
            </div>
        </div>
    </div>
    }
</div>
