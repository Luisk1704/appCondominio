@model IEnumerable<Infraestructure.Models.Residencia>

@{
    ViewBag.Title = "Index";
}

<div class="tabla">
    <h2>Lista de Residencias</h2>
    <br />
    <p>
        <a href="@Url.Action("Create", "Residencia")" class="regresar">Crear <strong class=".icono">+</strong></a>
    </p>
    <br />
    <table class="table text-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaInicio)
                </td>
                <td>
                    @if (item.Estado == "1")
                    {
                        <p>En Construcción</p>
                    }
                    else { 
                        <p>Finalizada</p>
                    }
                </td>
                <td>
                    <a href="@Url.Action("Details", "Residencia", new { id = item.ID })" class="details">Detalles</a>
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Residencia", new { id = item.ID})" class="details">Editar</a>
                </td>
            </tr>
        }

    </table>
</div>
