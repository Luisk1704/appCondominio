@model IEnumerable<Infraestructure.Models.Informacion>

<div class="tabla">
    <h2>Lista de Informacion</h2>
    <br />
    <p>
        <a href="@Url.Action("Create", "Informacion")" class="regresar">Crear <strong class=".icono">+</strong></a>
    </p>
    <br />
    <table class="table text-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Informacion1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario.Nombre) 
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Informacion1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.Nombre) @Html.DisplayFor(modelItem => item.Usuario.Apellido1)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Informacion", new { id = item.ID})" class="details">Editar</a>
                </td>
            </tr>
        }
    </table>
</div>


